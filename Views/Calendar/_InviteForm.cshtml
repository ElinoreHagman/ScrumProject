@model ScrumProject.Models.InviteIndexViewModel

    <h4>@TempData["accepted"]</h4>

@foreach (var invite in @ViewBag.inviteInformation)
{

    using (Html.BeginForm("AnswerInvite", "Calendar", FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal jumbotron meeting-form-nopadding">
            <div>
                <h2 style="padding-top: 10px;">Godkänn möte</h2>
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    <div class="col-md-10">
                        <h4>
                            Namn på mötet:
                            <strong>@invite.MeetingName</strong>
                        </h4>

                        <h4>
                            Möte hålls av:
                            <strong>@invite.Creator</strong>
                        </h4>
                    </div>
                </div>

                <h4>Datumförslag:</h4>
                <div class="form-group">
                    <div class="col-md-10">
                        <input name="IsChecked" type="radio" value="@invite.DateSuggestion1" /> @invite.DateSuggestion1
                        <br />
                        <input name="IsChecked" type="radio" value="@invite.DateSuggestion2" /> @invite.DateSuggestion2
                        <br />
                        <input name="IsChecked" type="radio" value="False" /> Tacka nej
                        <br />
                    </div>

                    <input value=@invite.InviteId name="inviteId" type="hidden">
                    <input value=@invite.MeetingName name="meetingName" type="hidden">
                </div>

                <div class="form-group">
                    <input type="submit" value="Svara på inbjudan" class="btn btn-info" style="margin: 5px 0 10px 16px;" />
                </div>
            </div>
        </div>
    }
}