@using ScrumProject.Models
@model CalendarIndexViewModel

<br />
<div class="jumbotron">

    @foreach (var meeting in Model.Meetings)
    {

    <div class="calendar-box">

        <div class="dateHolder">
            <h2>@meeting.MeetingDateTime.Day/@meeting.MeetingDateTime.Month</h2>
            <h3>@meeting.MeetingDateTime.ToString("hh:mm")</h3>

        </div>
        <div class="calendar-box-information">
            <h2>@meeting.Name</h2>
            <h4>Bokare: <span>@meeting.CreatorOfMeetings.Forename @meeting.CreatorOfMeetings.Surname</span>

            
                Deltagare:
                @foreach (var participants in Model.ProfilesToMeetings)
                {

                    if (participants.MeetingID == meeting.MeetingID)
                    {
                        <span>@participants.Profile.Forename @participants.Profile.Surname</span>
                    }

                }
            </h4>
        </div>
    </div>

    }

</div>

@Html.Partial("_MeetingForm", new MeetingIndexViewModel())
