@using ScrumProject.Models
@model ProfileIndexViewModel

<table>
    @foreach (var profile in Model.Profiles)
    {
        <tr>
            <td>@profile.Forename</td>
            <td>@profile.Surname</td>
            <td>@profile.Phonenumber</td>
            <td>@profile.AdminRights</td>
            <td style="visibility:collapse;">@profile.ProfileID</td>
        </tr>
    }
</table>
<hr />

@Html.Partial("AddProfileForm", new Profile())


<div id="AdminAccept" class="bg-default" style="padding: 1px 10px 20px 15px; margin: 10px 0px;">
    <br /><h2><b>Accept new registration request</b></h2>
    @Html.Partial("AdminAccept")
</div>

<hr />

<h2>Change default wall</h2>
<table>
    <tr>
        <td>
            @Html.ActionLink("Edit default wall", "WallSettings", "Profile")
        </td>
    </tr>

</table>


<li>@Html.ActionLink("Admin settings", "AdminPage", "Profile")</li>

